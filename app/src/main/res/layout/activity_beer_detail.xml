<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorItemBeerList">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="23dp"
            android:paddingEnd="23dp"
            tools:context=".view.BeerDetailActivity">

            <ImageView
                android:id="@+id/imgDetailBeer"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/labelBeerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                tools:text="Beer's name"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="@+id/imgDetailBeer"
                app:layout_constraintStart_toStartOf="@+id/imgDetailBeer"
                app:layout_constraintTop_toBottomOf="@+id/imgDetailBeer" />

            <TextView
                android:id="@+id/labelBeerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                tools:text="Beer's description"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelBeerName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>